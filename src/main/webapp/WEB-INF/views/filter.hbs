<form method="POST" class="filter-bar">

    <input type="text" placeholder="Поиск..." class="form-control">

    <div id="filter-ddl" class="filter-check-box">
        <p class="filter-title">Дедлайни</p>
        <div class="filter-checkblock d-flex">
            <div class="pretty p-switch checkblock">
                <input type="radio" name="switch2"/>
                <div class="state p-danger">
                    <label>Просрочені</label>
                </div>
            </div>
            <div class="pretty p-switch checkblock">
                <input type="radio" name="switch2"/>
                <div class="state p-success">
                    <label>Успішні</label>
                </div>
            </div>
        </div>
    </div>

    <div id="filter-priority" class="filter-check-box">
        <p class="filter-title">Приоритет:</p>
        <div class="filter-checkblock d-flex">
            <div class="pretty p-default p-round checkblock">
                <input type="checkbox" checked/>
                <div class="state p-danger-o">
                    <label>Срочный</label>
                </div>
            </div>
            <div class="pretty p-default p-round checkblock">
                <input type="checkbox" checked/>
                <div class="state p-warning-o">
                    <label>Важный</label>
                </div>
            </div>
            <div class="pretty p-default p-round checkblock">
                <input type="checkbox" checked/>
                <div class="state p-primary-o">
                    <label>Обычный</label>
                </div>
            </div>
        </div>
    </div>

    <select id="filter-depart" class="custom-select filter-select-box">
        <option> Выберите отдел</option>
    </select>

    <select id="filter-employee" class="custom-select filter-select-box" disabled>
        <option> Выберите работника</option>
    </select>

    <div class="filter-calendar d-flex justify-content-between align-items-center mt-2">
        <p>Дата:</p>
        <div>
            <button type="button" id="previewMonth" class="btn btn-sm btn-light mr-4"><</button>
            <span style="font-size:15px" id="filter-month">Апрель</span>
            <button type="button" id="nextMonth" class="btn btn-sm btn-light ml-4">></button>
        </div>
    </div>

</form>