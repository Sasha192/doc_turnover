<!DOCTYPE html>
<html lang="en">

<head>
    {{> static_head_module}}
    <link rel="stylesheet" href="css/access.css">
</head>

<body>
<div class="default-container d-flex align-items-center justify-content-center">
    <div class="access-block col-sm-12 col-md-8 col-lg-6 col-xl-6 row">
        <div class="col-lg-12 col-xl-6 access-form d-flex flex-column" id="login-form">
            <div class="header">
                <div class="title">Sign In</div>
                <div class="d-flex">
                    <button class="service-item">
                        Log in with
                        <img src="img/services/google.png" alt="">
                    </button>
                    <button class="service-item">
                        Log in with
                        <img src="img/services/facebook.png" alt="">
                    </button>
                </div>
            </div>
            <div class="body">
                <input type="text" placeholder="E-mail" class="custom-input e-mail">
                <input type="password" placeholder="Password" class="custom-input password">
                <div class="custom-control custom-checkbox default">
                    <input type="checkbox" class="custom-control-input" id="loRemember">
                    <label class="custom-control-label" for="loRemember">remember me</label>
                </div>
            </div>
            <div class="status">
                -
            </div>
            <div class="footer">
                <button style="color:#777777; margin:0px auto; margin-bottom:15px; font-size:14px">Forgot
                    password
                </button>
                <button id="login-button" class="custom-button m-auto w-100"
                        style="background-image: linear-gradient(to right, #80a9d4 0%, #88d3ce 100%, #80a9d4 100%);">
                    Log In
                </button>
            </div>
        </div>
        <div class="col-lg-12 col-xl-6 access-form" id="signup-form">
            <div class="header">
                <div class="title">Sign up</div>
                <div class="d-flex">
                    <button class="service-item">
                        Sign up with
                        <img src="img/services/google.png" alt="">
                    </button>
                    <button class="service-item">
                        Sign up with
                        <img src="img/services/facebook.png" alt="">
                    </button>
                </div>
            </div>
            <div class="body">
                <input type="text" placeholder="E-mail" class="custom-input e-mail">
                <input type="password" placeholder="Password" class="custom-input password">
                <input type="password" placeholder="Repeat password" class="custom-input repeat-password">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="custom-control custom-checkbox default d-flex align-items-center">
                        <input type="checkbox" class="option-checkbox custom-control-input" id="siRemember">
                        <label class="custom-control-label" for="siRemember">remember me</label>
                    </div>
                </div>
            </div>
            <div class="status">
                -
            </div>
            <div class="footer">
                    <span style="color:transparent; margin:0px auto; margin-bottom:15px; font-size:14px">
                        -
                    </span>
                <button id="signup-button" class="custom-button m-auto w-100"
                        style="background-image: linear-gradient(to right, #80a9d4 0%, #88d3ce 100%, #80a9d4 100%);">
                    Sign Up
                </button>
            </div>
        </div>
        <div class="col-lg-12 col-xl-6 state-change text-light">
            <h6 style='font-size:20px; font-family:"Helvetica italic"; color:#ffffff'>
                Get started!
            </h6>
            <button style="margin-top:20px" class="custom-button shift-button">Sign Up</button>
        </div>
    </div>
</div>
<script type="module" src="scripts/main.js"></script>
</body>

</html>