<!DOCTYPE html>
<html lang="en">

<head>
    {{> static_head_module}}
    <link rel="stylesheet" href="css/page-style.css">
    <link rel="stylesheet" href="css/boards.css">
    <link rel="stylesheet" href="css/charts.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
</head>

<body>
    <div class="wrapper d-flex">
        <div class="option-menu">
            <div class="option-item drop-down" id="notifications">
                <div class="drop-down_btn">
                    <img src="img/services/mail.png" alt="">
                </div>
                <div class="drop-down_list">
                    <div id="notifications-list">
                    </div>
                </div>
            </div>
            <div class="option-item">
                <a href="/Clpanel"><img src="img/services/settings.png" alt=""></a>
            </div>
        </div>
        <div class="padding-block col-0 col-sm-0 col-md-0 col-lg-0 col-xl-1"> </div>
        <div class="col-sm-12 col-xl-10 content">
            <div class="nav-bar">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="responsive-navbar-menu">
                        <div class="bar-block">
                            <div class="nav-bar_item">
                                <button onclick="window.location = '/teamboard'">
                                    <img src="img/services/team.png" alt="" class="bg_info">
                                    Дошка моєї команди
                                </button>
                            </div>
                            <div class="nav-bar_item active">
                                <button onclick="window.location = '/myboard'">
                                    <img src="img/services/man.png" alt="" class="bg_purple">
                                    Моя дошка
                                </button>
                            </div>
                            {{!-- <div class="nav-bar_item">
                                <button onclick="window.location = '/'">
                                    <img src="img/services/list.png" alt="" class="bg_indigo">
                                    Task Table
                                </button>
                            </div> --}}
                            <div class="nav-bar_item" id="linkToFiles">
                                <button onclick="window.location = '/archive'">
                                    <img src="img/services/icons8-folder-48.png" alt="" class="bg_info">
                                    Файли
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="nav-bar_item user-options">

                            <div class="drop-down">
                                <button class="drop-down_btn d-flex align-items-center">
                                    <i class="far fa-chevron-down"></i>
                                    <div class="user-name">
                                        Олександр
                                    </div>
                                </button>
                                <div class="drop-down_list">
                                    <div class="drop-down_item">
                                        Налаштування
                                        <i class="fa fa-cog"></i>
                                    </div>
                                    <div class="drop-down_item">
                                        Вийти
                                        <i class="fa fa-power-off"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="user-img">
                                <img data-user-status="online" src="img/avatars/5.jpg">
                                <div data-type="status" class="online"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="body">
                <div>
                    <div class="title" id="links">
                        <a href="#" data-key="date"></a>
                    </div>
                    <div class="filter-group">
                        <div class="filter" id="dateFilter">
                            <button class="bg-primary text-light btn btn-sm  dropdown-toggle" type="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Проміжок часу</button>

                            <div class="dropdown-menu" onclick="">
                                <a class="dropdown-item" id="weekChart" href="#">За останній тиждень</a>
                                <a class="dropdown-item" id="monthChart" href="#">За останній місяць</a>
                                <a class="dropdown-item" id="yearChart" href="#">За останній Рік</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" id="allTimeChart" href="#">За весь час</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- <div class="chart-container">
                    <canvas id="depchart"></canvas>
                </div> --}}
                {{!-- <div class="divider"></div> --}}
                <div class="charts">
                    {{!-- <div class="chart-container perchart-container">
                        <canvas class="perchart"></canvas>
                    </div> --}}
                </div>
            </div>

        </div>
        <div class="padding-block col-0 col-sm-0 col-md-0 col-lg-0 col-xl-1"></div>
    </div>

    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
    <script type="module" src="scripts/main.js"></script>
    <script type="module" src="scripts/modules/charts.js"></script>
</body>

</html>